<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:background="@drawable/card_exercise_list">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1"
            android:textSize="44.62sp"
            android:textColor="#818181"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/exercise_num"/>
        <!--app:textFontName="Roboto-Light"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_alignStart="@+id/exercise_num"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신전 운동"
                android:textSize="15sp"
                android:textColor="#818181"
                android:id="@+id/exercise_name_ko"/>
            <!--app:textFontName="NotoSansCJKkr-Medium"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Extension Exercise"
                android:textSize="9sp"
                android:textColor="#818181"
                android:id="@+id/exercise_name_en"/>
            <!--app:textFontName="Roboto-Regular"-->
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/three_times"
            android:id="@+id/threeTimes"/>
    </RelativeLayout>
</LinearLayout>