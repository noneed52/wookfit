<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="27.08"
        android:orientation="horizontal"
        android:onClick="onClick"
        android:id="@+id/closeBtn"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="72.92"
        android:orientation="vertical"
        android:background="#f6f6f6"
        android:onClick="onClick"
        android:id="@+id/nothingBtn">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10.04">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="33dp"
                android:paddingLeft="14dp"
                android:text="밴드 색상 설정"
                android:textColor="#00C2DA"
                android:textSize="12sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.06"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onClick"
                    android:id="@+id/yellow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="노랑"
                    android:textSize="10sp"
                    android:textColor="#7C7C7C"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onClick"
                    android:id="@+id/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빨강"
                    android:textSize="10sp"
                    android:textColor="#7C7C7C"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onClick"
                    android:id="@+id/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초록"
                    android:textSize="10sp"
                    android:textColor="#7C7C7C"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onClick"
                    android:id="@+id/blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="파랑"
                    android:textSize="10sp"
                    android:textColor="#7C7C7C"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onClick"
                    android:id="@+id/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검정"
                    android:textSize="10sp"
                    android:textColor="#7C7C7C"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onClick"
                    android:id="@+id/grey"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회색"
                    android:textSize="10sp"
                    android:textColor="#7C7C7C"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onClick"
                    android:id="@+id/brown"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="갈색"
                    android:textSize="10sp"
                    android:textColor="#7C7C7C"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10.04">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="33dp"
                android:paddingLeft="14dp"
                android:text="장치 설정"
                android:textColor="#00C2DA"
                android:textSize="12sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18.44"
            android:orientation="vertical"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="34">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="연결 여부"
                        android:textSize="10sp"
                        android:textColor="#7C7C7C"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="#d0d3d4"
                    android:layout_gravity="center"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="66">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dp"
                        android:text="연결됨/연결안됨"
                        android:textSize="10sp"
                        android:textColor="#7C7C7C"
                        android:id="@+id/connectivity"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d0d3d4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="34">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="베터리 잔량"
                        android:textSize="10sp"
                        android:textColor="#7C7C7C"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="#d0d3d4"
                    android:layout_gravity="center"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="66">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"
                        android:text="41% 남음"
                        android:textSize="10sp"
                        android:textColor="#7C7C7C"
                        android:id="@+id/battery"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d0d3d4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="34">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최근 기록"
                        android:textSize="10sp"
                        android:textColor="#7C7C7C"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="#d0d3d4"
                    android:layout_gravity="center"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="66">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"
                        android:text="0시간 전"
                        android:textSize="10sp"
                        android:textColor="#7C7C7C"
                        android:id="@+id/savedTime"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="51.4">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="30dp"
                android:src="@drawable/reset_selector"
                android:background="@null"
                android:onClick="onClick"
                android:id="@+id/resetBtn"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>