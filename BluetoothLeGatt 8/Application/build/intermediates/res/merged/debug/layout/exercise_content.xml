<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selected_card_shadow">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/info_icon"
        android:background="@null"
        android:onClick="onClick"
        android:id="@+id/exercise_info"/>
    <com.example.android.bluetoothlegatt.AnimatedGifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/test"
        android:id="@+id/gif_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="152sp"
        android:textStyle="italic"
        android:textColor="#00C2DA"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/dataCount"/>
    <!--app:textFontName="Roboto-ThinItalic"-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:src="@drawable/exercise_start_selector"
        android:background="@null"
        android:onClick="onClick"
        android:id="@+id/gatt_service_start_btn"/>
    <!--app:textFontName="NotoSansCJKkr-Medium"-->
</RelativeLayout>